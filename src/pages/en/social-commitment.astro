---
import Layout from '../../layouts/Layout.astro';
import { getLangFromUrl, useTranslations } from '../../i18n/utils';

const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);
---

<Layout
	title={t('commitment.title')}
	description={t('commitment.description')}
>
	<section class="relative w-full h-[40vh] md:h-[50vh] lg:h-[60vh] overflow-hidden">
		<img src="/assets/practica_responsable.jpg" alt="Social Commitment" class="absolute inset-0 w-full h-full object-cover object-top" />
		<div class="absolute inset-0 bg-black/40"></div>
		<div class="relative z-10 w-full h-full flex flex-col justify-end px-6 md:px-12 lg:px-20 pb-10 md:pb-14">
			<div class="max-w-360 mx-auto w-full">
				<h1 class="text-light-gray text-3xl md:text-4xl lg:text-5xl font-regular tracking-wide">{t('commitment.heading')}</h1>
				<div class="w-24 md:w-32 h-0.75 bg-bronze mt-2"></div>
			</div>
		</div>
	</section>

	<section class="bg-light-gray py-16 md:py-24 px-6 md:px-12 lg:px-20">
		<div class="max-w-4xl mx-auto">
			<p class="text-dark-slate text-base md:text-xl lg:text-2xl font-light leading-relaxed mb-6" set:html={t('commitment.p1')} />
			<p class="text-dark-slate text-base md:text-xl lg:text-2xl font-light leading-relaxed">{t('commitment.p2')}</p>
		</div>
	</section>

	<section class="bg-light-gray px-6 md:px-12 lg:px-20 pb-16 md:pb-24">
		<div class="max-w-360 mx-auto">
			<div class="flex flex-col lg:flex-row gap-10 lg:gap-16 items-center">
				<div class="w-full lg:w-1/2">
					<h2 class="text-dark-slate text-2xl md:text-4xl font-light tracking-wide mb-2">{t('commitment.vocacion')}</h2>
					<div class="w-20 h-0.75 bg-bronze mb-6"></div>
					<p class="text-dark-slate text-base md:text-xl lg:text-2xl font-light leading-relaxed">{t('commitment.vocacion.desc')}</p>
				</div>
				<div class="w-full lg:w-1/2">
					<img src="/assets/members/placeholder.jpg" alt="Human Vocation" class="w-full h-64 md:h-80 lg:h-96 object-cover" />
				</div>
			</div>
		</div>
	</section>

	<section class="relative w-full py-24 md:py-32 lg:py-40 overflow-hidden">
		<img src="/assets/general/last_banner.avif" alt="Our commitment" class="absolute inset-0 w-full h-full object-cover" />
		<div class="absolute inset-0 bg-black/30"></div>
		<div class="relative z-10 px-6 md:px-12 lg:px-20 h-150 grid items-end justify-start">
			<div class="max-w-360 mx-auto">
				<h2 class="text-light-gray text-2xl md:text-4xl lg:text-5xl font-regular tracking-wide leading-tight">
					{t('commitment.banner')}<br />
					<span class="underline decoration-bronze decoration-3 underline-offset-8">{t('commitment.banner.underline')}</span>
				</h2>
			</div>
		</div>
	</section>
</Layout>
