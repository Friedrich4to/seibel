---
import Layout from '../../layouts/Layout.astro';
import { getLangFromUrl, useTranslations } from '../../i18n/utils';

const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);
---

<Layout
	title={t('firm.title')}
	description={t('firm.description')}
	navbarDarkMode={true}
>
	<section class="dynamic-section-trigger bg-light-gray px-6 md:px-12 lg:px-20">
		<div class="max-w-3xl mx-auto h-svh flex flex-col">
			<div class="pt-16 md:pt-24">
				<video
					class="w-full mix-blend-multiply"
					autoplay
					muted
					playsinline
					src="/videos/logo_video.mp4"
				></video>
			</div>
			<div class="relative flex-1">
			<div class="dynamic-panel absolute inset-0 flex flex-col justify-start space-y-4">
				<p class="text-dark-slate text-base md:text-lg lg:text-xl font-light leading-relaxed" set:html={t('firm.p1')} />
				<p class="text-dark-slate text-base md:text-lg lg:text-xl font-light leading-relaxed" set:html={t('firm.p2')} />
				<p class="text-dark-slate text-base md:text-lg lg:text-xl font-light leading-relaxed">
					{t('firm.p3')}
				</p>
			</div>
			<div class="dynamic-panel absolute inset-0 flex flex-col justify-start space-y-4">
				<h3 class="text-dark-slate text-2xl md:text-3xl font-semibold tracking-wide ">{t('firm.enfoque.title')}</h3>
				<div class="w-16 h-0.75 bg-bronze"></div>
				<p class="text-dark-slate text-base md:text-lg lg:text-xl font-light leading-relaxed">
					{t('firm.enfoque.p1')}
				</p>
				<p class="text-dark-slate text-base md:text-lg lg:text-xl font-light leading-relaxed">
					{t('firm.enfoque.p2')}
				</p>
			</div>
			<div class="dynamic-panel absolute inset-0 opacity-0 flex flex-col space-y-4">
				<h3 class="text-dark-slate text-2xl md:text-3xl font-semibold tracking-wide ">{t('firm.consultoria.title')}</h3>
				<div class="w-16 h-0.75 bg-bronze mb-6"></div>
				<p class="text-dark-slate text-base md:text-lg lg:text-xl font-light leading-relaxed">
					{t('firm.consultoria.p1')}
				</p>
				<p class="text-dark-slate text-base md:text-lg lg:text-xl font-light leading-relaxed">
					{t('firm.consultoria.p2')}
				</p>
			</div>
			<div class="dynamic-panel absolute inset-0 opacity-0 flex flex-col">
				<h3 class="text-dark-slate text-2xl md:text-3xl font-semibold tracking-wide mb-4 uppercase">{t('firm.mision.title')}</h3>
				<div class="w-16 h-0.75 bg-bronze mb-6"></div>
				<p class="text-dark-slate text-base md:text-lg lg:text-xl font-light leading-relaxed">
					{t('firm.mision.p1')}
				</p>
			</div>
			</div>
		</div>
	</section>

	<script>
		import "../../scripts/areas_gsap.js";
	</script>

	<section class="relative w-full py-24 md:py-32 lg:py-40 overflow-hidden">
		<img
			src="/assets/general/last_banner.avif"
			alt="Our commitment"
			class="absolute inset-0 w-full h-full object-cover"
		/>
		<div class="absolute inset-0 bg-black/30"></div>

		<div class="relative z-10 px-6 md:px-12 lg:px-20 h-150 grid items-end justify-start">
			<div class="max-w-360 mx-auto">
				<h2 class="text-light-gray text-2xl md:text-4xl lg:text-5xl font-regular tracking-wide leading-tight">
					{t('firm.banner')}<br />
					<span class="underline decoration-bronze decoration-3 underline-offset-8">{t('firm.banner.underline')}</span>
				</h2>
			</div>
		</div>
	</section>
</Layout>
