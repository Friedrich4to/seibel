---
interface Props {
	name: string;
	phone: string;
	email: string;
	image: string;
	imageAlt: string;
	link: string;
}

const { name, phone, email, image, imageAlt, link } = Astro.props;
---

<div class="flex flex-col">
	<div class="w-full max-h-96 aspect-4/5 bg-gray-300 overflow-hidden">
		<a href={link}>
			<img
				src={image}
				alt={imageAlt}
				class="w-full h-full object-cover object-top grayscale"
			/>
		</a>
	</div>

	<div class="mt-6 flex flex-col">
		<h3 class="text-dark-slate text-2xl md:text-3xl font-medium tracking-wide uppercase">
			{name}
		</h3>

		<div class="text-dark-slate text-sm md:text-base font-light mt-4 leading-relaxed">
			<slot />
		</div>

		<div class="flex flex-col gap-1 mt-4 text-dark-slate text-sm md:text-base font-light">
			<p>{phone}</p>
			<p class="lowercase">{email}</p>
		</div>

		<a
			href={link}
			class="self-start mt-4 border border-dark-slate text-dark-slate px-6 py-2 text-sm hover:bg-dark-slate hover:text-white transition-colors duration-300 tracking-wide"
		>
			Ver perfil
		</a>
	</div>
</div>
