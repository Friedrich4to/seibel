---
import { useTranslations } from '../i18n/utils';

interface Props {
  lang?: 'es' | 'en';
}

const { lang = 'es' } = Astro.props;
const t = useTranslations(lang);
---

<footer class="bg-dark-slate text-light-gray pt-12 md:pt-16">
  <div class="max-w-360 mx-auto px-4 sm:px-6 lg:px-20">
    <div class="grid grid-cols-1 lg:grid-cols-3 gap-8 lg:gap-12">

      <!-- Social Icons Section -->
      <div class=" flex gap-6 lg:gap-3 justify-start items-center lg:items-start">
        <a
          href="https://www.instagram.com/seibelhenriquez/"
          target="_blank"
          rel="noopener noreferrer"
          class="text-light-gray hover:text-bronze transition-colors duration-300"
          aria-label="Instagram"
        >
          <svg class="w-10 h-10" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
            <rect x="2" y="2" width="20" height="20" rx="5" ry="5" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
            <path d="M16 11.37A4 4 0 1 1 12.63 8 4 4 0 0 1 16 11.37z" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
            <line x1="17.5" y1="6.5" x2="17.51" y2="6.5" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
          </svg>
        </a>

        <a
          href="https://linkedin.com"
          target="_blank"
          rel="noopener noreferrer"
          class="text-light-gray hover:text-bronze transition-colors duration-300"
          aria-label="LinkedIn"
        >
          <svg class="w-10 h-10" fill="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
            <path d="M20.447 20.452h-3.554v-5.569c0-1.328-.027-3.037-1.852-3.037-1.853 0-2.136 1.445-2.136 2.939v5.667H9.351V9h3.414v1.561h.046c.477-.9 1.637-1.85 3.37-1.85 3.601 0 4.267 2.37 4.267 5.455v6.286zM5.337 7.433c-1.144 0-2.063-.926-2.063-2.065 0-1.138.92-2.063 2.063-2.063 1.14 0 2.064.925 2.064 2.063 0 1.139-.925 2.065-2.064 2.065zm1.782 13.019H3.555V9h3.564v11.452zM22.225 0H1.771C.792 0 0 .774 0 1.729v20.542C0 23.227.792 24 1.771 24h20.451C23.2 24 24 23.227 24 22.271V1.729C24 .774 23.2 0 22.222 0h.003z"/>
          </svg>
        </a>
      </div>

      <!-- Location Section -->
      <div class="">
        <h3 class="text-lg font-light uppercase tracking-wide mb-4 pb-2">
          {t('footer.ubicacion')}
        </h3>
        <address class="not-italic space-y-2">
          <p class="text-base font-light">{t('footer.piantini')}</p>
          <p class="text-base font-light">{t('footer.pais')}</p>
          <p class="text-base font-light">{t('footer.calle')}</p>
          <p class="text-base font-light">{t('footer.numero')}</p>
        </address>

        <div class="mt-6 space-y-2">
          <p class="text-base font-light">
            {t('footer.tel')} <a href="tel:8093382000" class="hover:text-bronze transition-colors">809.338.2000</a>
          </p>
        </div>

        <div class="mt-4">
          <p class="text-base font-light">{t('footer.email')}</p>
          <a
            href="mailto:info@seibelhenriquez.com"
            class="text-base font-light hover:text-bronze transition-colors"
          >
            info@seibelhenriquez.com
          </a>
        </div>
      </div>

      <!-- International Address Section -->
      <div class="">
        <h3 class="text-lg font-light uppercase tracking-wide mb-4 pb-2">
          {t('footer.direccion-postal')}
        </h3>
        <address class="not-italic space-y-2">
          <p class="text-base font-light">{t('footer.miami-1')}</p>
          <p class="text-base font-light">{t('footer.miami-2')}</p>
          <p class="text-base font-light">{t('footer.miami-3')}</p>
        </address>
      </div>

    </div>
  </div>
  <div class="w-full mt-12 md:mt-16">
    <iframe
      src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d3784.367322596698!2d-69.93721567575133!3d18.46701358500898!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x8eaf89e19d4ac277%3A0xc8008cf0f8a878db!2sSeibel%20%26%20Henr%C3%ADquez!5e0!3m2!1ses-419!2sdo!4v1771369768197!5m2!1ses-419!2sdo"
      width="100%"
      height="450"
      style="border:0;"
      allowfullscreen=""
      loading="lazy"
      referrerpolicy="no-referrer-when-downgrade"
    ></iframe>
  </div>
</footer>

<style>
  footer {
    background-color: var(--color-dark-slate);
  }
</style>
