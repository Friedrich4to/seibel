      <!-- Location Section -->
      <div class="lg:col-span-5">
        <h3 class="text-lg font-light uppercase tracking-wide mb-4 pb-2">
          Ubicación
        </h3>
        <address class="not-italic space-y-2">
          <p class="text-base font-light">Piantini, Santo Domingo,</p>
          <p class="text-base font-light">República Dominicana</p>
