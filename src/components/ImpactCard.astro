---
interface Props {
	title: string;
	description: string;
	image: string;
	imageAlt: string;
}

const { title, description, image, imageAlt } = Astro.props;
---

<div class="embla__slide flex-[0_0_100%] min-w-0 md:flex-[0_0_45%] lg:flex-[0_0_32%] px-3">
	<div class="flex flex-col overflow-hidden group">
		<img
			src={image}
			alt={imageAlt}
			class="w-full h-2/4 object-cover transition-transform duration-500"
		/>

		<div class="flex flex-col h-full gap-4 p-6 md:p-8 bg-dark-slate text-white">
			<h3 class="text-lg md:text-xl font-light tracking-wide uppercase">
				{title}
			</h3>
			<div class="w-20 h-0.75 bg-bronze"></div>
			<p class="text-sm md:text-base font-light leading-relaxed opacity-90">
				{description}
			</p>
		</div>
	</div>
</div>
