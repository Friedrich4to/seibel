---
interface Props {
	logos: { src: string; alt: string }[];
}

const { logos } = Astro.props;
---

<section class="bg-light-gray py-16 md:py-24 px-6 md:px-12 lg:px-20">
	<h2 class="text-dark-slate text-2xl md:text-3xl lg:text-4xl font-light italic tracking-wide text-center mb-12 md:mb-16">
		EQUIPOS QUE HAN CONFIADO EN NOSOTROS
	</h2>

	<div class="team-logos max-w-360 mx-auto">
		{logos.map((logo) => (
			<img src={logo.src} alt={logo.alt} loading="lazy" />
		))}
	</div>
</section>

<style>
	.team-logos {
		display: flex;
		flex-wrap: wrap;
		justify-content: center;
		align-items: center;
		gap: 3rem;
	}

	.team-logos img {
		height: auto;
		width: 120px;
		object-fit: contain;
		flex-shrink: 0;
	}

	@media (min-width: 768px) {
		.team-logos {
			gap: 4rem;
		}
		.team-logos img {
			height: 80px;
		}
	}
</style>
