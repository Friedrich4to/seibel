---
interface Props {
	title: string;
	image: string;
	imageAlt: string;
	url: string;
	certificate?: {
		src: string;
		alt: string;
	};
}

const { title, image, imageAlt, url, certificate } = Astro.props;
---

<a href={url} class="flex flex-col overflow-hidden group">
	<div class="relative w-full aspect-4/3 overflow-hidden">
		<img
			src={image}
			alt={imageAlt}
			class="w-full h-full object-cover transition-transform duration-500 group-hover:scale-105"
		/>
		{certificate && (
			<img
				src={certificate.src}
				alt={certificate.alt}
				class="absolute bottom-2 left-2 w-24 md:w-30 h-auto"
			/>
		)}
	</div>
	<div class="pt-5 pb-2">
		<h3 class="text-dark-slate text-sm md:text-base font-medium tracking-wider uppercase">
			{title}
		</h3>
		<div class="w-16 h-0.75 bg-bronze mt-3"></div>
	</div>
</a>
